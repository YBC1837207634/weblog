<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gong.blog.manage.mapper.SysRoleMapper">

    <sql id="sysRoleColumns">
        SELECT
        id,
        name,
        `key`,
        status,
        create_by,
        update_by,
        create_time,
        update_time
        from sys_role
    </sql>

    <!-- 插入单个 -->
    <insert id="insertOne" parameterType="SysRole" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_role
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="key != null">`key`,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="key != null">#{key},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <!-- 插入多个 -->
    <insert id="insertBatch" parameterType="list">
        INSERT INTO
            sys_role (
            <trim suffixOverrides=",">
                name,
                `key`,
                status,
                create_by,
                update_by,
            </trim>
        )
        VALUES
            <foreach collection="sysRoleList" item="item" separator="," >
            (
            <trim suffixOverrides=",">
                #{item.name},
                #{item.key},
                #{item.status},
                #{item.createBy},
                #{item.updateBy},
            </trim>
            )
            </foreach>

    </insert>
    <!--  删除  -->
    <delete id="deleteById">
        DELETE FROM sys_role WHERE id = #{id} AND id != 1
    </delete>

    <!-- 批量删除 -->
    <delete id="deleteByIds">
        DELETE FROM sys_role
        WHERE id in
        <foreach collection="ids" item="item" separator="," nullable="false" open="(" close=")">
            #{item}
        </foreach>
        AND id != 1
    </delete>

    <!-- 查询-->
    <select id="selectById" resultType="SysRole">
        <include refid="sysRoleColumns"/>
        WHERE id = #{id}
    </select>

    <!-- 列表查询 -->
    <select id="selectList"  resultType="SysRole">
        <include refid="sysRoleColumns"/>
    <where>
        <if test="id != null">
            id = #{id}
        </if>
        <if test="name != null">
            name like concat('%',#{name},'%')
        </if>
        <if test="key != null">
            `key` = #{key}
        </if>
        <if test="status != null">
            status = #{status}
        </if>
        <if test="createBy != null">
            create_by = #{createBy}
        </if>
        <if test="updateBy != null">
            update_by = #{updateBy}
        </if>
        <if test="createTime != null">
            create_time = #{createTime}
        </if>
        <if test="updateTime != null">
            update_time = #{updateTime}
        </if>
        <if test="beginTime != null and endTime != null">
            AND create_time
            BETWEEN DATE_FORMAT(#{beginTime}, '%Y-%m-%d') AND DATE_FORMAT(#{endTime}, '%Y-%m-%d')
        </if>
    </where>
    </select>

    <!-- 更新 -->
    <update id="updateById" parameterType="SysRole">
        UPDATE sys_role
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="key != null">`key` = #{key},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>