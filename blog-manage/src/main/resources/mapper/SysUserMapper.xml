<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gong.blog.manage.mapper.SysUserMapper">

    <sql id="sysUserColumns">
        SELECT
        id,
        nickname,
        username,
        password,
        gender,
        avatar,
        mail,
        phone,
        signature,
        user_type,
        status,
        create_by,
        update_by,
        create_time,
        update_time
        from sys_user
    </sql>

    <!-- 插入单个 -->
    <insert id="insertOne" parameterType="SysUser" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="nickname != null">nickname,</if>
            <if test="username != null">username,</if>
            <if test="password != null">password,</if>
            <if test="gender != null">gender,</if>
            <if test="avatar != null">avatar,</if>
            <if test="mail != null">mail,</if>
            <if test="phone != null">phone,</if>
            <if test="signature != null">signature,</if>
            <if test="userType != null">user_type,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>

        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="nickname != null">#{nickname},</if>
            <if test="username != null">#{username},</if>
            <if test="password != null">#{password},</if>
            <if test="gender != null">#{gender},</if>
            <if test="avatar != null">#{avatar},</if>
            <if test="mail != null">#{mail},</if>
            <if test="phone != null">#{phone},</if>
            <if test="signature != null">#{signature},</if>
            <if test="userType != null">#{userType},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <!-- 插入多个 -->
    <insert id="insertBatch" parameterType="list">
        INSERT INTO
            sys_user (
            <trim suffixOverrides=",">
                nickname,
                username,
                password,
                gender,
                avatar,
                mail,
                phone,
                signature,
                user_type,
                status,
                create_by,
                update_by,
            </trim>
        )
        VALUES
            <foreach collection="sysUserList" item="item" separator="," >
            (
            <trim suffixOverrides=",">
                #{item.nickname},
                #{item.username},
                #{item.password},
                #{item.gender},
                #{item.avatar},
                #{item.mail},
                #{item.phone},
                #{item.signature},
                #{item.userType},
                #{item.status},
                #{item.createBy},
                #{item.updateBy},
            </trim>
            )
            </foreach>

    </insert>

    <!--  删除  -->
    <delete id="deleteById">
        DELETE FROM sys_user WHERE id = #{id} AND id != 1
    </delete>

    <!-- 批量删除 -->
    <delete id="deleteByIds">
        DELETE FROM sys_user
        WHERE id in
        <foreach collection="ids" item="item" separator="," nullable="false" open="(" close=")">
            #{item}
        </foreach>
        AND id != 1
    </delete>

    <!-- 查询-->
    <select id="selectById" resultType="SysUser">
        <include refid="sysUserColumns"/>
        WHERE id = #{id}
    </select>

    <!-- 列表查询 -->
    <select id="selectList"  resultType="SysUser">
    <include refid="sysUserColumns"/>
    <where>
        <if test="id != null">
            id = #{id}
        </if>
        <if test="nickname != null">
            AND nickname like concat('%',#{nickname},'%')
        </if>
        <if test="username != null">
            AND username  like concat('%',#{username},'%')
        </if>
        <if test="gender != null">
            AND gender = #{gender}
        </if>
        <if test="avatar != null">
            avatar = #{avatar}
        </if>
        <if test="mail != null">
            AND mail like concat('%',#{mail},'%')
        </if>
        <if test="phone != null">
            AND phone like concat('%',#{phone},'%')
        </if>
        <if test="signature != null">
            AND signature = #{signature}
        </if>
        <if test="userType != null">
            AND user_type = #{userType}
        </if>
        <if test="status != null">
            AND status = #{status}
        </if>
        <if test="createBy != null">
            AND create_by = #{createBy}
        </if>
        <if test="updateBy != null">
            AND update_by = #{updateBy}
        </if>
        <if test="createTime != null">
            AND create_time = #{createTime}
        </if>
        <if test="updateTime != null">
            AND update_time = #{updateTime}
        </if>
        <if test="beginTime != null and endTime != null">
            AND create_time BETWEEN DATE_FORMAT(#{beginTime}, '%Y-%m-%d') AND DATE_FORMAT(#{endTime}, '%Y-%m-%d')
        </if>
    </where>
    </select>

    <!-- 根据账号查询  -->
    <select id="selectByUserName" resultType="SysUser">
        <include refid="sysUserColumns"/>
        WHERE username = #{username}
    </select>

    <!-- 更新 -->
    <update id="updateById" parameterType="SysUser">
        UPDATE sys_user
        <set>
            <if test="nickname != null">nickname = #{nickname},</if>
            <if test="username != null">username = #{username},</if>
            <if test="password != null">password = #{password},</if>
            <if test="gender != null">gender = #{gender},</if>
            <if test="avatar != null">avatar = #{avatar},</if>
            <if test="mail != null">mail = #{mail},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="signature != null">signature = #{signature},</if>
            <if test="userType != null">user_type = #{userType},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="count" resultType="int">
        SELECT count(*) FROM `sys_user`
    </select>

    <!-- 根据用户id查找角色列表 -->
    <select id="selectRoleByUserId" resultType="com.gong.blog.manage.entity.SysRole">
        SELECT
            DISTINCT r.id, r.name, r.key, r.status, r.create_by, r.update_by, r.create_time, r.update_time
        FROM
            sys_role r
                JOIN sys_user_role ur ON ur.role_id = r.id
        WHERE
            ur.user_id = #{userId} AND r.status = 1
    </select>


</mapper>