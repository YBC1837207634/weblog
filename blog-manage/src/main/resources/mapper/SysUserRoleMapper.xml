<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gong.blog.manage.mapper.SysUserRoleMapper">

    <sql id="sysUserRoleColumns">
        SELECT
        id,
        user_id,
        role_id
        from sys_user_role
    </sql>

    <!-- 插入单个 -->
    <insert id="insertOne" parameterType="SysUserRole">
        INSERT INTO sys_user_role
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="roleId != null">role_id,</if>

        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="roleId != null">#{roleId},</if>
        </trim>
    </insert>

    <!-- 插入多个 -->
    <insert id="insertBatch" parameterType="list">
        INSERT INTO
            sys_user_role (
            <trim suffixOverrides=",">
                user_id,
                role_id
            </trim>
        )
        VALUES
            <foreach collection="sysUserRoleList" item="item" separator="," >
            (
            <trim suffixOverrides=",">
                #{item.userId},
                #{item.roleId}
            </trim>
            )
            </foreach>

    </insert>

    <!--  删除  -->
    <delete id="deleteByUserId">
        DELETE FROM sys_user_role WHERE user_id = #{userId}
    </delete>

    <!--  根据 roleId 删除  -->
    <delete id="deleteByRoleId">
        DELETE FROM sys_user_role WHERE role_id = #{roleId}
    </delete>
    <!--  根据 roleId 删除  -->
    <delete id="deleteByRoleIds">
        DELETE FROM sys_user_role WHERE role_id IN
        <foreach collection="roleIds" item="item" separator="," nullable="false" open="(" close=")">
            #{item}
        </foreach>
    </delete>

    <!-- 批量删除 -->
    <delete id="deleteByUserIds">
        DELETE FROM sys_user_role
        WHERE user_id in
        <foreach collection="userIds" item="item" separator="," nullable="false" open="(" close=")">
            #{item}
        </foreach>
    </delete>

    <!-- 查询-->
    <select id="selectRoleIdByUserId" resultType="long">
        SELECT role_id FROM sys_user_role
            WHERE user_id = #{userId}
    </select>

    <!-- 列表查询 -->
    <select id="selectList"  resultType="SysUserRole">
        <include refid="sysUserRoleColumns"/>
    <where>
        <if test="id != null">
            id = #{id}
        </if>
        <if test="userId != null">
            user_id = #{userId}
        </if>
        <if test="roleId != null">
            role_id = #{roleId}
        </if>
    </where>
    </select>

    <!-- 更新 -->
    <update id="updateByUserId" parameterType="SysUserRole">
        UPDATE sys_user_role
        <set>
            <if test="roleId != null">role_id = #{roleId},</if>
        </set>
        WHERE user_id = #{userId}
    </update>
</mapper>